<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimeDetailsActivity">

    <ImageView
        android:id="@+id/animeImageView"
        android:layout_width="180dp"
        android:layout_height="188dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />


    <TextView
        android:id="@+id/animeTitleView"
        android:layout_width="383dp"
        android:layout_height="88dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="182dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animeImageView" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="183dp"
        android:layout_height="59dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="104dp"
        android:text="Save Themes to Youtube Playlist"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animeTitleView" />

</androidx.constraintlayout.widget.ConstraintLayout>